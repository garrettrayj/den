{
    "upload": {
        "type": "xliff",
        "files": [
            {
                "pattern": "Localizations/en.xcloc/Localized Contents/en.xliff",
                "lang": "inherited"
            },
            {
                "group": "existing",
                "pattern": "Localizations/*.xcloc/Localized Contents/*.xliff",
                "excludes": ["Localizations/en.xcloc/Localized Contents/en.xliff"],
                "lang": "${autodetectLang}"
            }
        ]
    },
    "download": {
        "files": "Localizations/${lang}.xcloc/Localized Contents/${lang}.xliff"
    }
}
